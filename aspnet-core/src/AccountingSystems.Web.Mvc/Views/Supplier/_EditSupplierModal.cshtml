@using AccountingSystems.Web.Models.Common.Modals
@model AccountingSystems.Web.Models.Suppliers.EditSupplierModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSupplier")))

<div class="modal-body">
    <form name="SupplierEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.SupplierEdit.Id" />
        <input type="hidden" name="TenantId" value="@Model.SupplierEdit.TenantId" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Code" type="text" name="Code" value="@Model.SupplierEdit.Code" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Code" class="form-label">Supplier Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Name" type="text" name="Name" value="@Model.SupplierEdit.Name" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Name" class="form-label">Salesman Name</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Address" type="text" name="Address" value="@Model.SupplierEdit.Address" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Address" class="form-label">Address</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Telephone" type="text" name="Telephone" value="@Model.SupplierEdit.Telephone" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Telephone" class="form-label">Telephone</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Supplier/_EditSupplierModal.js" asp-append-version="true"></script>
