@using AccountingSystems.Web.Models.Common.Modals
@model AccountingSystems.Web.Models.Salesman.EditSalesmanModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSalesman")))

<div class="modal-body">
    <form name="SalesmanEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.SalesmanEdit.Id" />
        <input type="hidden" name="TenantId" value="@Model.SalesmanEdit.TenantId" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="locationcode" type="text" name="Code" value="@Model.SalesmanEdit.Code" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="locationcode" class="form-label">Salesman Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Name" type="text" name="Name" value="@Model.SalesmanEdit.Name" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Name" class="form-label">Salesman Name</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Address" type="text" name="Address" value="@Model.SalesmanEdit.Address" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Address" class="form-label">Address</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Town" type="text" name="Town" value="@Model.SalesmanEdit.Town" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Town" class="form-label">Town</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Telephone" type="text" name="Telephone" value="@Model.SalesmanEdit.Telephone" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Telephone" class="form-label">Telephone</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="District" type="text" name="District" value="@Model.SalesmanEdit.District" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="District" class="form-label">District</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Salesman/_EditSalesmanModal.js" asp-append-version="true"></script>
