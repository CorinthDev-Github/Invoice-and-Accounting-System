@using AccountingSystems.Web.Models.Common.Modals
@model AccountingSystems.Web.Models.RetailEnvironments.EditRetailEnvironmentModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRetailEnv")))

<div class="modal-body">
    <form name="RetailEnvEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.EnvironmentEdit.Id" />
        <input type="hidden" name="TenantId" value="@Model.EnvironmentEdit.TenantId" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Code" type="text" name="Code" value="@Model.EnvironmentEdit.Code" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Code" class="form-label">Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="RetailEnvironmentCode" type="text" name="RetailEnvironmentCode" value="@Model.EnvironmentEdit.RetailEnvironmentCode" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="RetailEnvironmentCode" class="form-label">Retail Environment Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="SubRECode" type="text" name="SubRECode" value="@Model.EnvironmentEdit.SubRECode" maxlength="32" class="validate form-control">
                        <label for="SubRECode" class="form-label">Sub-RE Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Description" type="text" name="Description" value="@Model.EnvironmentEdit.Description" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Description" class="form-label">Description</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="CustomerType" type="text" name="CustomerType" value="@Model.EnvironmentEdit.CustomerType" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="CustomerType" class="form-label">Customer Type</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/RetailEnvironments/_EditRetailEnvModal.js" asp-append-version="true"></script>
