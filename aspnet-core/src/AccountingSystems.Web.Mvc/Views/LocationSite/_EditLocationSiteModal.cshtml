@using AccountingSystems.Web.Models.Common.Modals
@model AccountingSystems.Web.Models.LocationSites.EditLocationSiteModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit Location Site"))

<div class="modal-body">
    <form name="LocationSiteEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.LocationSite.Id" />
        <input type="hidden" name="TenantId" value="@Model.LocationSite.TenantId" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Sitee" type="text" name="SiteCode" value="@Model.LocationSite.SiteCode" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Sitee" class="form-label">Site Code</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Descc" type="text" name="Description" value="@Model.LocationSite.Description" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="Descc" class="form-label">Site Description</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/LocationSites/_EditLocationSiteModal.js" asp-append-version="true"></script>
